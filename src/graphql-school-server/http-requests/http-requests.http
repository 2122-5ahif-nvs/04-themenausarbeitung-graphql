# returns the possible fields
GET http://localhost:8080/books/schema.graphql

###

POST http://localhost:8080/books
Content-Type: application/graphql

query allBooks {
   allBooks {
       title
       author
   }
}

###

POST http://localhost:8080/books
Content-Type: application/graphql

query allBooks {
   allBooks {
       title
       author
       isbn_13
       year_of_publication
       genre
   }
}

###

POST http://localhost:8080/books
Content-Type: application/graphql

query FindByTitle {
   findByTitle(title: "Hard Gun") {
       author
       isbn_13
       genre
   }
}

