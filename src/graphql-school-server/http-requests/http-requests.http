POST http://localhost:8080/books
Content-Type: application/graphql

mutation SaveBook {
  saveBook(
  book: {
      title: "Neues Buch!"
      author: "Jan"
      isbn_13: "187187187187"
      year_of_publication: "2022"
      genre: "heeeeeeeeeeee"
  	}
  )
  {
    title
    author
  }
}